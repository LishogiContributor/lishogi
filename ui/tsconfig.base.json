{
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "moduleResolution": "Bundler",
    "target": "ES2017",
    "module": "esnext",
    "lib": ["DOM", "ES2017"],
    "types": ["lishogi", "jquery"]
  },
  "include": ["${configDir}/src"],
  "exclude": ["${configDir}/dist"]
}
